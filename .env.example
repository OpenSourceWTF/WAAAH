# ==============================================
# WAAAH - Work Anywhere Autonomous Agent Hub
# Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ----------------
# Server Settings
# ----------------
# Port for the MCP server to listen on
WAAAH_PORT=3000

# URL for the MCP server (used by bot and agents to connect)
# Local development:
MCP_SERVER_URL=http://localhost:3000
# Production (Docker):
# MCP_SERVER_URL=https://yourdomain.com

# ----------------
# API Key Authentication
# ----------------
# REQUIRED: Shared secret for API authentication
# All protected endpoints require this key via X-API-Key header or ?apiKey query param
#
# Generate with: openssl rand -hex 32
# Or use: node -e "console.log('waaah-' + require('crypto').randomBytes(24).toString('hex'))"
#
# If not set, one will be auto-generated and saved to ~/.waaah/credentials.json
#
# Protected endpoints:
#   - /admin/* (API endpoints, not static files)
#   - /mcp/tools/*
#   - /debug/*
#
# Public endpoints:
#   - /health
#   - /admin/*.html, /admin/*.js, /admin/*.css (static dashboard files)
WAAAH_API_KEY=

# ----------------
# Database
# ----------------
# SQLite database path
# Local:
DB_PATH=./data/waaah.db
# Docker:
# DB_PATH=/app/data/waaah.db

# ----------------
# Workspace Configuration
# ----------------
# Root directory for the workspace (defaults to cwd)
# WORKSPACE_ROOT=/path/to/your/project

# ----------------
# Agent Configuration
# ----------------
# Path to agent roles/aliases configuration
AGENTS_CONFIG=./config/agents.yaml

# ----------------
# Discord Bot
# ----------------
# Discord bot token (from Discord Developer Portal)
DISCORD_TOKEN=

# Comma-separated list of Discord User IDs allowed to use the bot
# Example: 123456789012345678,987654321098765432
APPROVED_USERS=

# Channel ID for posting delegation logs
# Right-click channel -> Copy ID (Developer Mode must be enabled)
DELEGATION_CHANNEL_ID=

# ----------------
# Slack Bot
# ----------------
# Slack bot token (starts with xoxb-)
SLACK_BOT_TOKEN=

# Slack signing secret (from App > Basic Information)
SLACK_SIGNING_SECRET=

# Slack app-level token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=

# Slack channel ID for delegation logs
# Right-click channel -> Copy Link, extract ID from URL
SLACK_DELEGATION_CHANNEL_ID=

# ----------------
# Bot Platform
# ----------------
# Which platform(s) to connect to: discord | slack | both
PLATFORM=discord

# ----------------
# MCP Proxy (Agent-side)
# ----------------
# Default agent identity (fallback if not specified in workflow)
AGENT_ID=unknown-agent
AGENT_ROLE=developer

# ----------------
# Production Deployment
# ----------------
# Domain name for SSL certificate (Certbot)
DOMAIN_NAME=example.com

# ----------------
# Optional: Debug/Development
# ----------------
# Set to 'development' for verbose logging
# NODE_ENV=development

# Custom prompt timeout (seconds, max 300)
# WAAAH_PROMPT_TIMEOUT=290
